<?xml version="1.0" encoding="UTF-8"?>
<project name="Net" default="compile" basedir="../">
	<property name="src" location="net" />
	<property name="lib" location="lib" />
	<property name="build" location="build/net" />
	
	<target name="compile">
		<delete dir="${build}" />
			
		<mkdir dir="${build}" />
		
		<mkdir dir="${build}/classes" />
		
		<javac srcdir="${src}" destdir="${build}/classes" optimize="on" debug="on" source="1.7" target="1.7" nowarn="off" includeantruntime="false" deprecation="yes">
			<compilerarg value="-Xlint" />
		</javac>
		
		<jar destfile="${build}/net.jar">
			<fileset dir="${build}/classes" />
		</jar>
		
		<copy file="${build}/net.jar" todir="${lib}" overwrite="true" />
	</target>	
</project>